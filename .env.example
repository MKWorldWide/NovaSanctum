# AWS Configuration
NEXT_PUBLIC_AWS_REGION=us-east-1
NEXT_PUBLIC_USER_POOL_ID=your-user-pool-id
NEXT_PUBLIC_USER_POOL_CLIENT_ID=your-user-pool-client-id
NEXT_PUBLIC_AWS_APPSYNC_API_URL=your-appsync-api-url

# API Keys (if any)
# NEXT_PUBLIC_API_KEY=your-api-key

# Authentication
# NEXT_PUBLIC_AUTH_DOMAIN=your-auth-domain
# NEXT_PUBLIC_AUTH_CLIENT_ID=your-auth-client-id

# Analytics (if applicable)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id
# NEXT_PUBLIC_AMPLITUDE_API_KEY=your-amplitude-key

# Feature Flags (if applicable)
# NEXT_PUBLIC_FEATURE_FLAG_NEW_UI=true
# NEXT_PUBLIC_FEATURE_FLAG_EXPERIMENTAL=false

# Search Integrations (server-side)
# Google Programmable Search (Custom Search Engine)
# Create a CSE at https://programmablesearchengine.google.com/
GOOGLE_CSE_ID=
GOOGLE_API_KEY=

# Optional: Comma-separated list of allowed/high-trust domains for web results filtering
# Example: nature.com,sciencemag.org,nih.gov,arxiv.org,ieee.org,acm.org,cell.com,mit.edu,stanford.edu
SEARCH_ALLOWED_DOMAINS=
