{
  "name": "novasanctum",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "dev:server": "NODE_ENV=development node server.js",
    "lint": "eslint src/app src/providers src/services/search src/components/ResourceNavigator.tsx src/components/StatusAlert.tsx src/components/StatusToast.tsx",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx --fix src",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json,yml,yaml,css,scss}\"",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "prepare": "husky install",
    "pipeline:discover": "tsx pipeline/cli.ts discover",
    "pipeline:ingest": "tsx pipeline/cli.ts ingest",
    "pipeline:build-blueprint": "tsx pipeline/cli.ts build-blueprint",
    "pipeline:search": "tsx pipeline/cli.ts search-index",
    "pipeline:list": "tsx pipeline/cli.ts list-resources",
    "pipeline:review": "tsx pipeline/cli.ts review-resource",
    "pipeline:type-check": "tsc --noEmit -p pipeline/tsconfig.json"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "better-sqlite3": "^12.6.2",
    "commander": "^14.0.3",
    "jsdom": "^28.0.0",
    "next": "^14.2.32",
    "p-limit": "^7.3.0",
    "pdf-parse": "^2.4.5",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.11.30",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^8.43.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "postcss": "^8",
    "prettier": "^3.1.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
